<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<system.serviceModel>
		<services>
			<service name="WCFDemoService.HelloService" behaviorConfiguration="mexBehaviour">
				<endpoint  address="HelloService" binding="basicHttpBinding" contract="WCFDemoService.IHelloService">
				</endpoint>
				<endpoint address="HelloService" binding="netTcpBinding" contract="WCFDemoService.IHelloService">
				</endpoint>
				<endpoint address="mex" binding ="mexHttpBinding" contract="IMetadataExchange"></endpoint>
				<host>
					<baseAddresses >
						<add baseAddress="http://localhost:8800"/>
						<add baseAddress="net.tcp://localhost:9000"/>
					</baseAddresses>
				</host>
			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior name ="mexBehaviour">
					<serviceMetadata httpGetEnabled="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>

</configuration>